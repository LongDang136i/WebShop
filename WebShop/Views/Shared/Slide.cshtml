@model List<Model.EF.Slide>

    @foreach (var item in Model)
    {
        <div id="slide-1" class="slide" style="width:877px;">            
            <div  class="slider-img">
                <a href="@item.Link"><img src="@item.Image" alt="learn more" /></a>
            </div>
            <div class="slider-text">
                <h1>Khuyến mãi<br><span>Lớn</span></h1>
                <h2>Lên đến @item.Discount</h2>
                <div class="features_list">
                    <h4>@item.Description</h4>
                </div>
                <a href="@item.Link" class="button">Xem Ngay</a>
            </div>
            <div class="clear"></div>

        </div>
    }
